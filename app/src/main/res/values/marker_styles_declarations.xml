<resources>
    <attr name="measureDimension" format="dimension" />
    <attr name="backgroundCircleDimension" format="dimension" />
    <attr name="positionDimension" format="dimension" />
    <attr name="positionColor" format="color" />
    <attr name="positionBackgroundColor" format="color" />
    <attr name="lineWidth" format="dimension" />
    <attr name="sightColor" format="color" />
    <attr name="sightBackgroundColor" format="color" />

    <declare-styleable name="PositionOrientationMarker">
        <attr name="measureDimension" />
        <attr name="positionDimension" />
        <attr name="orientationRadius1Dimension" format="dimension" />
        <attr name="backgroundCircleDimension" />
        <attr name="orientationAngle" format="integer" />
        <attr name="positionColor" />
        <attr name="positionBackgroundColor" />
        <attr name="orientationColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PositionMarker">
        <attr name="measureDimension"/>
        <attr name="backgroundCircleDimension" />
        <attr name="positionDimension" />
        <attr name="positionColor" />
        <attr name="positionBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="CalibrationMarker">
        <attr name="measureDimension" />
        <attr name="lineWidth" />
        <attr name="sightColor" />
        <attr name="sightBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="DistanceMarker">
        <attr name="measureDimension" />
        <attr name="lineWidth" />
        <attr name="sightColor" />
        <attr name="sightBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="AreaMarker">
        <attr name="measureDimension" />
        <attr name="lineWidth" />
        <attr name="sightColor" />
        <attr name="sightBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="AreaView">
        <attr name="backgroundColor" />
        <attr name="strokeColor" />
    </declare-styleable>
</resources>
